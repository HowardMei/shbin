
if [ -n "$_" ] && [ -x "$_" ]; then
	if [ -n "$(echo "$_" | grep -i "/bash" 2>/dev/null)" ]; then
		echo "sudo bash -c $@" >&2 
		suba "$@" 
	else
		echo "sudo sh -c $@" >&2 
		sush "$@" 
	fi
else
	if [ -n "$(echo "$SHELL" | grep -i "/bash" 2>/dev/null)" ]; then
		echo "sudo bash -c $@" >&2 
		suba "$@" 
	else
		echo "sudo sh -c $@" >&2
		sush "$@" 
	fi
fi
