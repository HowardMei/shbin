
#---  FUNCTION  -------------------------------------------------------------------------------------------------------
#          NAME:  isbash
#%   DESCRIPTION:  Check if running under bash environment
#%   USAGE: if [ -n "$(isbash)" ]; then
#%   REQUIRES: ps, grep
#----------------------------------------------------------------------------------------------------------------------
##echo "$_ $0 $BASH_SOURCE $(ps -p $$ 2>/dev/null)" >&2

CHKA="$-"

case ${CHKA} in
	hB | h*B*)
		echo "Shell is bash"
	;;
	-- | *)
		echo "Shell is NOT bash" >&2
	;;
esac

unset CHKA

